<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Blog</title>
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=hub"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css"
      integrity="sha512-2SwdPD6INVrV/lHTZbO2nodKhrnDdJK9/kg2XD1r9uGqPo1cUbujc+IYdlYdEErWNu69gVcYgdxlmVmzTWnetw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top px-3">
      <a class="navbar-brand fw-bold" href="/posts"
        ><span class="material-symbols-outlined"> hub </span></a
      >
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/posts">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/about">About</a></li>
          <li class="nav-item">
            <a class="nav-link" href="/contact">Contact</a>
          </li>
        </ul>
        <!-- Search Form in Navbar -->
        <form
          action="/posts/search"
          method="GET"
          class="d-flex"
          style="margin: auto"
        >
          <input
            type="text"
            name="q"
            class="form-control"
            placeholder="Search posts..."
            style="width: 200px"
          />
          <button
            type="submit"
            class="btn btn-outline-light m-2"
            style="width: 60px"
          >
            <span class="material-symbols-outlined"
              ><i class="fa-solid fa-magnifying-glass"></i
            ></span>
          </button>
        </form>
      </div>
    </nav>

    <!-- Hero Image -->
    <div class="hero">
      <img
        src="https://images.unsplash.com/photo-1488190211105-8b0e65b80b4e?q=80&w=1170&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
        alt="Hero Image"
      />
      <div class="hero-overlay"></div>
      <div class="hero-content">
        <h1>Welcome to My Blog</h1>
        <p>
          Discover amazing stories, insights, and inspiration from around the
          world.
        </p>

        <a href="/posts/new" class="btn btn-light">Start Writing</a>
      </div>
    </div>

    <!-- cards -->
    <div class="container">
      <div class="row row-cols-1 row-cols-md-3 g-5">
        <% posts.forEach(post => { %>
        <div class="col">
          <div class="card h-100">
            <% if (post.image) { %>
            <img
              src="<%= post.image %>"
              class="card-img-top"
              alt="post image"
            />
            <% } %>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= post.title %></h5>
              <p class="card-text flex-grow-1">
                <%= post.content.substring(0, 100) %>...
              </p>
              <a
                href="/posts/<%= post._id %>/views"
                class="btn btn-primary mt-auto"
                >Read More</a
              >
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <div class="subscribe-section bg-dark text-white text-center py-5">
      <div class="container subscribe-container">
        <h3 class="subscribe-title">Join Our Community</h3>
        <p class="subscribe-description">
          Subscribe for daily updates and exclusive content
        </p>
        <form class="subscribe-form">
          <input
            type="email"
            class="subscribe-input"
            placeholder="Enter your email"
            required
          />
          <button class="subscribe-button">Subscribe</button>
        </form>
      </div>
    </div>
  </body>
</html>
