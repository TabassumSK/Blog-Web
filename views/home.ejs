<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Blog</title>
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=hub"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top px-3">
      <a class="navbar-brand fw-bold" href="/posts"
        ><span class="material-symbols-outlined"> hub </span></a
      >
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/posts">Home</a></li>
          <!-- <li class="nav-item">
            <a class="nav-link" href="/posts/new">âž• New Blog</a>
          </li> -->
          <li class="nav-item"><a class="nav-link" href="/about">About</a></li>
          <li class="nav-item">
            <a class="nav-link" href="/contact">Contact</a>
          </li>
        </ul>
      </div>
    </nav>

    <!-- Hero Image -->
    <div class="hero">
      <img
        src="https://images.unsplash.com/photo-1488190211105-8b0e65b80b4e?q=80&w=1170&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
        alt="Hero Image"
      />
      <div class="hero-overlay"></div>
      <div class="hero-content">
        <h1>Welcome to My Blog</h1>
        <p>
          Discover amazing stories, insights, and inspiration from around the
          world.
        </p>
        <a href="/posts/new" class="btn btn-light">Start Writing</a>
      </div>
    </div>

    <div class="container">
      <div class="posts-grid">
        <% posts.forEach(post => { %>
        <div class="card">
          <% if (post.image) { %>
          <img src="<%= post.image %>" alt="post image" class="card-image" />
          <% } %>
          <div class="card-content">
            <h2 class="card-title"><%= post.title %></h2>
            <p class="card-author">By <%= post.author %></p>
            <p class="card-excerpt"><%= post.content.substring(0, 100) %>...</p>
            <a href="/posts/<%= post._id %>/views" class="card-btn"
              >Read More</a
            >
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <div class="subscribe-section bg-dark text-white text-center py-5">
      <div class="container">
        <h3>Join Us</h3>
        <p>Subscribe for daily updates</p>
        <form
          class="d-flex justify-content-center align-items-center gap-2 mt-3"
        >
          <input
            type="email"
            class="form-control"
            placeholder="Enter your email"
            style="max-width: 300px"
            required
          />
          <button class="btn btn-primary">Subscribe</button>
        </form>
      </div>
    </div>
  </body>
</html>
