<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Search Results - My Blog</title>
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=hub"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top px-3">
      <a class="navbar-brand fw-bold" href="/posts"
        ><span class="material-symbols-outlined"> hub </span></a
      >
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/posts">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/about">About</a></li>
          <li class="nav-item">
            <a class="nav-link" href="/contact">Contact</a>
          </li>
        </ul>
      </div>
    </nav>

    <!-- Search Section -->
    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="search-header text-center mb-5">
            <h1>Search Results</h1>
            <form action="/posts/search" method="GET" class="d-flex mt-3">
              <input
                type="text"
                name="q"
                class="form-control me-2"
                placeholder="Search posts by title, content, or author..."
                value="<%= searchQuery || '' %>"
                required
              />
              <button type="submit" class="btn btn-primary">
                <span class="material-symbols-outlined">search</span>
              </button>
            </form>
          </div>

          <!-- Search Results -->
          <% if (searchQuery) { %>
            <div class="search-info mb-4">
              <p class="text-muted">
                <% if (posts.length > 0) { %>
                  Found <%= posts.length %> result<%= posts.length !== 1 ? 's' : '' %> for "<%= searchQuery %>"
                <% } else { %>
                  No results found for "<%= searchQuery %>"
                <% } %>
              </p>
            </div>
          <% } %>

          <!-- Results Grid -->
          <div class="row row-cols-1 row-cols-md-2 g-4">
            <% posts.forEach(post => { %>
            <div class="col">
              <div class="card h-100">
                <% if (post.image) { %>
                <img
                  src="<%= post.image %>"
                  class="card-img-top"
                  alt="post image"
                />
                <% } %>
                <div class="card-body d-flex flex-column">
                  <h5 class="card-title"><%= post.title %></h5>
                  <p class="card-text text-muted fst-italic">
                    By <%= post.author %>
                  </p>
                  <p class="card-text flex-grow-1">
                    <%= post.content.substring(0, 150) %>...
                  </p>
                  <a
                    href="/posts/<%= post._id %>/views"
                    class="btn btn-primary mt-auto"
                    >Read More</a
                  >
                </div>
              </div>
            </div>
            <% }) %>
          </div>

          <!-- No Results Message -->
          <% if (posts.length === 0 && searchQuery) { %>
          <div class="no-results text-center mt-5">
            <div class="no-results-icon mb-3">
              <span class="material-symbols-outlined" style="font-size: 4rem; color: #ddd;">search</span>
            </div>
            <h3>No posts found</h3>
            <p class="text-muted">Try adjusting your search terms or browse all posts</p>
            <a href="/posts" class="btn btn-outline-primary">View All Posts</a>
          </div>
          <% } %>

          <!-- Back to Home -->
          <% if (posts.length > 0) { %>
          <div class="text-center mt-5">
            <a href="/posts" class="btn btn-outline-secondary">‚Üê Back to All Posts</a>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
